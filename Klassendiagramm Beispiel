package cs_17_2_4;

public class Launcher {

	public static void main(String[] args) {
		TagDerOffenenTuer t1 = new TagDerOffenenTuer(100);
		t1.fuegePersonenHinzu(50, 0);
		t1.fuegePersonenHinzu(10, 1);
		System.out.println(t1.toString());
	}

}
